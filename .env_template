# Copy this file to `.env` and fill in values.
# NOTE: `.env` is loaded automatically on startup (SGC will NOT override existing env vars).

# Required (choose one):
SGC_API_KEY=""
# OPENAI_API_KEY=""

# Optional:
# Base URL of an OpenAI-compatible server.
# Default: https://api.openai.com/v1
# Note: for some providers, the OpenAI-compatible endpoint is not under /v1.
# In that case, set this to the prefix that contains /chat/completions.
SGC_BASE_URL="https://api.openai.com/v1"

# Model name.
# Default: gpt-4o-mini
SGC_MODEL="gpt-4o-mini"

# Request timeout in seconds.
# Default: 15
SGC_TIMEOUT_S="15"

# Max output tokens.
# Default: 120
SGC_MAX_TOKENS="120"

# Sampling temperature.
# Default: 0.2
SGC_TEMPERATURE="0.2"
